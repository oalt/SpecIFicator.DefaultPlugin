@using MDD4All.UI.BlazorComponents.Tree
<Tree Nodes="HierarchyViewModel.RootNodes"
      ChildSelector="viewModel => viewModel.Children"
      @bind-SelectedNode="selectedNode"
      HasChildNodes="node => node.Children?.Any() == true">

    <TitleTemplate>@context.Level @context.Title</TitleTemplate>

</Tree>
