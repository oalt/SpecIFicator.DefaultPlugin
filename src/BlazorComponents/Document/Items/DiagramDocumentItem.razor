<p>@DataContext.Level <ResourceIcon Icon="@DataContext.ReferencedResource.Icon"></ResourceIcon> @DataContext.Title</p>
@if(!string.IsNullOrEmpty(DataContext.ReferencedResource.Diagram))
{
    <div class="diagram">@((MarkupString)DataContext.ReferencedResource.Diagram)</div>
}
@if(!string.IsNullOrEmpty(DataContext.ReferencedResource.Description))
{
    <div>@((MarkupString)DataContext.ReferencedResource.Description)</div>
}
