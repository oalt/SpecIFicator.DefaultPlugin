@using MDD4All.SpecIF.ViewModels
@using MDD4All.SpecIF.DataModels.Manipulation
<div id="@DataContext.NodeViewModel.ReferencedResource.Resource.ID">
    <table width="100%" style="border:solid;border-width:1px">
        <tr style="border:solid;border-width:1px">

            <td rowspan="2" style="border:solid;border-width:1px;width:10px;"></td>
            <td>
                <div>
                    <strong>
                        @DataContext.NodeViewModel.Level <ResourceIcon Icon="@DataContext.NodeViewModel.ReferencedResource.Icon"></ResourceIcon>
                        @DataContext.NodeViewModel.Title
                    </strong>
                </div>
            </td>
        </tr>
        <tr style="border:solid;border-width:1px">
           
            <td>
                <div>@((MarkupString)DataContext.NodeViewModel.ReferencedResource.Resource.GetPropertyValue("dcterms:description", DataContext.NodeViewModel.MetadataReader))</div>
            </td>
        </tr>

    </table>
</div>
