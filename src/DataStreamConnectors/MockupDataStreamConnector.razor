<h2> Mockup Data Stream</h2>

<div class="mt-4">
    @if (!DataContext.IsConnecting)
    {
        <button class="btn btn-success" @onclick="HandleConnectClickAsync">@L["Label.Connect"]</button>
    }
    else
    {
        <div>
            <span class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>

            </span>
            <span>&nbsp;@L[DataContext.StatusMessageKey]</span>
        </div>
    }
</div>


