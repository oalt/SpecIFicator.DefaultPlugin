<h2> <img src="/images/EA_Logo.png" height="50" /></h2>

<div>
    <fieldset>
        <legend>@L["Label.MongoDbConnectionString"]</legend>
        <input type="text" class="form-control" @bind="MongoDbConnectionString" />
        <legend>@L["Label.ConnectionString"]</legend>
        <input type="text" class="form-control" @bind="ConnectionString" />
    </fieldset>
</div>
<div class="mt-4">
    @if (!DataContext.IsConnecting)
    {
        <button class="btn btn-success" @onclick="HandleConnectClickAsync">@L["Label.Connect"]</button>
    }
    else
    {
        <div>
            <span class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>

            </span>
            <span>&nbsp;@L[DataContext.StatusMessageKey]</span>
        </div>
    }
</div>

